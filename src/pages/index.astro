---
import BaseHeader from '~/components/base-header.astro';
import {
  EmailIcon,
  GithubIcon,
  // MdiLinkedin,
  // NotionIcon,
  // TwitterXIcon,
} from '~/components/ui/icons';
import MainLayout from '~/layouts/main-layout.astro';
import { useI18n } from '~/libs/i18n';

const { url } = Astro;
const { p, t } = useI18n(url);
---

<MainLayout class="font-serif">
  <BaseHeader title={`${t('index.name')} ﹒ hyeonjun`} />
  <div data-animate data-animate-speed="slow">
    <!-- 소개 -->
    <div class="my-7" set:html={t('index.desc')} />
    <div class="my-7">
      <!-- 현재 -->
      <p set:html={t('index.currentWork')} />
      <!-- SNS -->
      <div data-animate class="mt-1 flex gap-0.5">
        <a
          style="--lv-wait: 1;"
          class="rounded p-1 transition-colors hover:bg-selection hover:text-body"
          href="mailto:mhj5256@gmail.com"
          aria-label="email"
        >
          <EmailIcon />
        </a>
        <a
          style="--lv-wait: 1;"
          class="rounded p-1 transition-colors hover:bg-selection hover:text-body"
          href="https://github.com/moonhyeonjun"
          target="_blank"
          aria-label="github"
        >
          <GithubIcon />
        </a>
        <!-- <a
          style="--lv-wait: 1;"
          class="rounded p-1 transition-colors hover:bg-selection hover:text-body"
          href="/"
          target="_blank"
          aria-label="twitter"
        >
          <TwitterXIcon />
        </a> -->
        <!-- <a
          style="--lv-wait: 1;"
          class="rounded p-1 transition-colors hover:bg-selection hover:text-body"
          href="/"
          aria-label="linkedin"
        >
          <MdiLinkedin />
        </a> -->
        <!-- <a
          style="--lv-wait: 1;"
          class="flex items-center gap-1 rounded p-1 transition-colors hover:bg-selection hover:text-body"
          href="/"
          target="_blank"
          aria-label="resume"
        >
          <NotionIcon />
          <span class="text-xs leading-tight">resume</span>
        </a> -->
      </div>
    </div>
    <!-- 나의 공간 -->
    <div class="my-14 flex gap-7">
      <div>{t('nav.title')}</div>
      <div data-animate class="flex flex-col gap-1">
        {
          (['writing', 'note', 'craft'] as const).map((item) => (
            <div style="--lv-wait: 2;">
              <a class="link font-bold" href={p(`/${item}`)}>
                {t(`nav.${item}`)}
              </a>
              <span class="ml-3 text-sm">{t(`nav.${item}.desc`)}</span>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</MainLayout>
